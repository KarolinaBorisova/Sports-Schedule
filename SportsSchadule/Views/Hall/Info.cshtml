@using SportSchadule.Core.Models.Hall
@model HallInfoViewModel

@{
    ViewBag.Title = "Hall Info";
}

<div class="card text-center">
    <div class="card-header">
        <h5 class="card-title">@Model.Name</h5>
    </div>
    <div class="card-body">
        <p class="card-text">Address: @Model.Address</p>
        <p class="card-text">Capacity: @Model.Capacity</p>
        <p class="card-text">Places Left: @Model.PlacesLeft</p>
        <a href="#" class="btn btn-info">All sports in @Model.Name</a>
        <a href="#" class="btn btn-info">Add new sport in @Model.Name</a>

    </div>
</div>