@using SportsSchedule.Infrastructure.Data
@model IEnumerable<SportHomeViewModel>

@{
    ViewData["Title"] = "Home Page";
    var sports = Model.ToList();
}

    <div class="mt-4 p-5 bg-light">
        <h1 class="display-4">Welcome to the best place to find your sport! </h1>
@if (!sports.Any())
{          
        <p class="lead">
            There are no sports in the system currently available!           
        </p>
}
    </div>

<div class="mb-5"></div>

<div id="carouselExampleControls" class="carousel slide" data-bs-ride="carousel">
    <div class="carousel-inner">
        @for (int i = 0; i < sports.Count(); i++)
        {
            var sport = sports[i];
            <div class="carousel-item active">
                <img class="d-block w-20" style="height:250px"
                    src="@sport.ImageUrl" alt="@sport.Name">
                <div class="carousel-caption d-none d-md-block">
                    <h5>
                        <a class="btn btn-primary" asp-controller="Sport" asp-action="Info"
                            asp-route-id="@sport.Id"> @sport.Name</a>
                    </h5>
                </div>
            </div>
        }
    </div>
    <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Previous</span>
    </button>
    <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleControls" data-bs-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="visually-hidden">Next</span>
    </button>
</div>
